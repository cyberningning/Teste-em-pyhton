numero1 = int(input("Digite o primeiro número: "))
numero2 = int(input("Digite o segundo número: "))
print("Por favor, qual é o tipo de operação que deseja realizar?")
print("1 - Soma")
print("2 - Subtração")
print("3 - Multiplicação")
print("4 - Divisão")
operacao = int(input("Digite o número correspondente à operação desejada: "))
if operacao  == 1:
    print(f"O resultado da soma é: {numero1 + numero2}")
elif operacao == 2:
    print(f"O resultado da subtração é: {numero1 - numero2}")
elif operacao == 3:
    print(f"O resultado da multiplicação é: {numero1 * numero2}")
elif operacao  == 4:
    print(f"O resultado da divisão é: {numero1 / numero2}")
else:
    print("conta matemática feita com sucesso")
